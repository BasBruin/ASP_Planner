@using BusnLogicBW
@model RegisterTeamViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-center">

    <form asp-action=Index method="POST">
        <h1>Maak een team aan!</h1><br />
        <table class="tabel">
            <tr>
                <td>TeamNaam</td>
                <td><input asp-for=Naam></td>
            </tr>
            <div class="col-md-12">
                @if (ViewData["ZelfdeNaam"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["ZelfdeNaam"]
                    </div>
                }
            </div>
            <tr>
                <td>Beschrijving</td>
                <td><input asp-for=Beschrijving required></td>
            </tr>
            <td>1ste teamgenoot</td>
            <td>
                @Html.DropDownListFor(m => m.Teamspeler2, new SelectList(Model.gebruikers), "--Gebruikers--",
                new { @class = "form-control full-width"})
            </td>
            <td>2de teamgenoot</td>
            <td>
                @Html.DropDownListFor(m => m.Teamspeler3, new SelectList(Model.gebruikers), "--Gebruikers--",
                new { @class = "form-control full-width"})
            </td>
            <div class="col-md-12">
                @if (ViewData["ZelfdeTeamMate"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["ZelfdeTeamMate"]
                    </div>
                }
            </div>
        </table>
        <div class="d-flex justify-content-center">
            <input type="submit" value="Maak team!">
        </div>
    </form>
</div>