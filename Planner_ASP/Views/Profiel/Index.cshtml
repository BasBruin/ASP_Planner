@using BusnLogicBW
@model ProfielViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-center">
    <form asp-action=Index method="POST">
        <h1 class="d-flex justify-content-center">Profiel:</h1>
        <table class="tabel">
            <tr>
                <td>Naam</td>
                <td><input asp-for=Naam value='@Model.gebruiker.Naam'></td>
            </tr>
            <tr>
                <td>Gebruikersnaam</td>
                <td><input asp-for=PlannerNaam value='@Model.gebruiker.PlannerNaam'></td>
            </tr>
            <tr>
                <td>In-Game Gebruikersnaam</td>
                <td><input asp-for=GameNaam value='@Model.gebruiker.GameNaam'></td>
            </tr>
            <tr>
                <td>Email</td>
                <td><input asp-for=Email value='@Model.gebruiker.Email'></td>
            </tr>
            <tr>
                <td>Rank1s</td>
                <td>
                    <select asp-for=Rank1s value='@Model.gebruiker.Rank1s'>
                        @foreach (Rank rank in Model.ranks)
                        {
                            if (rank.Naam == Model.gebruiker.Rank1s)
                            {
                                <option selected> @rank.Naam</option>
                            }
                            else
                            {
                                <option>@rank.Naam</option>
                            }
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>Rank2s</td>
                <td>
                    <select asp-for=Rank2s value='@Model.gebruiker.Rank2s'>
                        @foreach (Rank rank in Model.ranks)
                        {
                            if (rank.Naam == Model.gebruiker.Rank2s)
                            {
                                <option selected> @rank.Naam</option>
                            }
                            else
                            {
                                <option>@rank.Naam</option>
                            }
                        }
                    </select>
                </td>
            </tr>
            <tr>
                <td>Rank3s</td>
                <td>
                    <select asp-for=Rank3s value='@Model.gebruiker.Rank3s'>
                        @foreach (Rank rank in Model.ranks)
                        {
                            if (rank.Naam == Model.gebruiker.Rank3s)
                            {
                                <option selected> @rank.Naam</option>
                            }
                            else
                            {
                                <option>@rank.Naam</option>
                            }
                        }
                    </select>
                </td>
            </tr>
            <tr>
        </table>
        <div class="d-flex justify-content-center">
            <input type="submit" value="Change Profile!">
        </div>
    </form>


